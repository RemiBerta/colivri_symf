{% extends 'base.html.twig' %}

{% block title %}
  Hello ListingController!
{% endblock %}

{% block body %}
  <div class="">
    <div class="max-w-[900px] mx-auto flex flex-wrap justify-between gap-4">
      {% for listing in listings %}

        <div class="bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-700 p-6 shadow-lg rounded-lg hover:shadow-xl transition-all duration-300">
                {% if (listing.pictures|length) > 0 %}
          <img src="{{ listing.pictures|first.url }}" alt="{{ listing.pictures|first.title }}" class="rounded-lg object-cover h-48 w-full"/>
        {% endif %}
          <h2 class="text-3xl font-semibold text-gray-800 dark:text-gray-100 mb-2">{{ listing.title }}</h2>
          <h3 class="text-2xl text-gray-600 dark:text-gray-300 mb-4">{{ listing.adress.city }}</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">{{ listing.description }}</p>
          <div class="flex justify-end">
          <h3 class="text-pink-300 font-bold">{{ listing.pricePerMonth }}â‚¬/mois</h3>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
